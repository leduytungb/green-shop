                    +product-small("cay-co-ta-small", "Cây cọ ta", "300.000")
                  .col-md-6.col-xl-12
                    +product-small("cay-dua-nho-small", "Cây dứa nhỏ", "275.000")
            .col-xl-9
              .block-two-right
                +block-header('Sản phẩm khuyến mại', true)
                .promotion-slider.js-owl-slider
                  .owl-carousel.owl-theme.js-promotion-slider
                    .item
                      .row
                        .col-md-4
                          +product-box("cay-danh-du", "Cây Danh Dự", "475.000", "250.000", 1, 'is-small')
                        .col-md-4
                          +product-box("cay-dua-nho", "Cây Dứa Nhỏ", "668.000", "250.000", 1, 'is-small')
                        .col-md-4
