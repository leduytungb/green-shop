doctype html
html
  +head
  body
    // Start header
    header
      +header-top
      +header-middle
      +header-bottom
    // End header
    |
    |
    main
      // Start slider
      .slider
        .owl-carousel.owl-theme.js-slider
          +slider-item("slider-1")
          +slider-item("slider-1")
          +slider-item("slider-1")
      // End slider
      |
      |
      // Start featured
      .featured
        .container
          +block-header('Sản phẩm nổi bật')
          .row
            .col-md-6
              +product-box("cay-chan-chim", "Cây chân chim", "250.000", "250.000", 0)
              .row
                .col-md-6
                  +product-box("cay-co-ta", "Cây Cọ Ta", "150.000", "250.000", '', 'is-small')
                .col-md-6
                  +product-box("cay-dua-nho", "Cây Dứa Nhỏ", "375.000", "250.000", '', 'is-small')
            .col-md-6
              .row
                .col-md-6
                  +product-box("cay-da-lam", "Cây Dạ Lam", "500.000", "250.000", 1, 'is-small')
                .col-md-6
                  +product-box("cay-danh-du", "Cây Danh Dự", "850.000", "250.000", 0, 'is-small')
                .col-md-12
                  +product-box("cay-da-bup-do", "Cây đa búp đỏ", "1.000.000", "250.000", 1)
      // End featured
      |
      |
      // Start Block two
      .block-two
        .container
          .row
            .col-xl-3
              .block-two-left
                +block-header('Sản phẩm mua nhiều')
                .row
                  .col-md-6.col-xl-12
                    +product-small("cay-chan-chim-small", "Cây chân chim", "250.000")
                  .col-md-6.col-xl-12
                    +product-small("cay-da-lam-small", "Cây Dạ Lam", "150.000")
                  .col-md-6.col-xl-12
                    +product-small("cay-danh-du-small", "Cây danh dự", "450.000")
