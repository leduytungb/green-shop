      |
      |
      // New 
      .new
        .container
          +block-header('Sản phẩm mới', true)
          .new-slider.js-owl-slider
            .owl-carousel.owl-theme
              .item
                .row
                  .col-md-4.col-lg-3
                    +product-box("cay-danh-du", "Cây Danh Dự", "250.000", "250.000", 0, 'is-small')
