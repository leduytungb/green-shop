                        .col-md-4
                          +product-box("cay-danh-du", "Cây Danh Dự", "780.000", "250.000", '', 'is-small')
                        .col-md-4
                          +product-box("cay-dua-nho", "Cây Dứa Nhỏ", "375.000", "250.000", '', 'is-small')
                    .item
                      .row
                        .col-md-4
